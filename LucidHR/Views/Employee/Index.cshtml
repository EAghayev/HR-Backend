<div class="main-content-items">
    <div class="row">
        <div class="col-md-12">
            <div id="employee-list">
                <div class="list-header">
                    <h6>Employee List</h6>
                    <button class="btn btn-info" id="modal-add-new">Add New</button>
                </div>
                <div class="table-responsive">

                    <table class="table table-striped" id="data-table">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    <div class="pretty p-svg p-curve">
                                        <input type="checkbox" id="employee-checkbox-all" />
                                        <div class="state p-warning">
                                            <!-- svg path -->
                                            <svg class="svg svg-icon" viewBox="0 0 20 20">
                                                <path d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                                                      style="stroke: white;fill:white;"></path>
                                            </svg>
                                            <label></label>
                                        </div>
                                    </div>
                                </th>
                                <th>Name</th>
                                <th>Employe ID</th>
                                <th>Phone</th>
                                <th>Join Date</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="emp-tbody">
                            @foreach (var item in Model.Employees)
                            {
                                <tr id="@item.Id">
                                    <td name="profile">
                                        <div class="pretty p-svg p-curve">
                                            <input type="checkbox" value="@item.Id" name="emp-checkbox" />
                                            <div class="state p-warning">
                                                <!-- svg path -->
                                                <svg class="svg svg-icon" viewBox="0 0 20 20">
                                                    <path d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                                                          style="stroke: white;fill:white;"></path>
                                                </svg>
                                                <label></label>
                                            </div>
                                        </div>
                                        <div class="profile-img">
                                            <img src="~/Public/Upload/Profiles/ProfileThumbnails/@item.Profile" alt="">
                                        </div>
                                    </td>
                                    <td name="name-email">
                                        <h6>@item.Name @item.Surname</h6>
                                        <span>@item.Email</span>
                                    </td>
                                    <td name="emp-id">
                                        @{ 
                                            string empId = "LA-" + item.Id;
                                        }
                                        <span>@empId</span>
                                    </td>
                                    <td name="phone">
                                        <span>
                                            @* @item.Phone.Substring(0, 3)- @item.Phone.Substring(3, 3)- @item.Phone.Substring(6, 2)- @item.Phone.Substring(8, item.Phone.Length - 8)*@
                                            @item.Phone
                                        </span>
                                    </td>
                                    <td name="date">
                                        <span>@item.JoinDate.Value.ToString("MMMM dd, yyyy")</span>
                                    </td>
                                    <td name="role">
                                        <span>@item.Role.Name</span>
                                    </td>
                                    <td name="btns">
                                        <a href="@Url.Action("edit","employee",new { id = item.Id })"  class="emp-edit"><i class="far fa-edit"></i></a>
                                        <a href=" @Url.Action("delete","employee",new { id = item.Id }) " class="emp-delete"><i class="far fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>


                </div>

            </div>

        </div>
    </div>
</div>
