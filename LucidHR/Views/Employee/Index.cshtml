@model LucidHR.Models.ViewHome
@{
    ViewBag.Title = "Index";
}

@section employeeModal{
    <div class="modal ">
        <div class="modal-overlay animated zoomIn">
            <div class="employee-modal ">
                <div class="employee-modal-header">
                    <h5>Add New</h5>
                </div>
                @*<form action="@Url.Action("upload")" class="dropzone" id="profile-upload" method="post">
            <div class="dz-message" data-dz-message><span> + Add profile photo</span></div>

        </form>*@
                <form class="add-uploaded" name="upload" method="post">

                    <div class="form-group form-content d-flex justify-content-start align-items-center mb-0" >
                        <label for="upload" id="upload-lbl" class="mb-0">
                            <i class="fas fa-plus"></i>
                            Add photo
                        </label>
                        <input type="file" id="upload" maxlength="100" />
                        <div class="uploaded-img">
                            <div class="img">
                                <a class="image-popup-no-margins uploaded-img-link" href="">
                                </a>
                                    

                            </div>
                           
                        </div>

                    </div>
                </form>
                <form method="post" autocomplete="off" id="add-emp" class="add-form">
                    <div class="form-group form-content">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="FullName" class="form-control" placeholder="Name and Surname" maxlength="100" required>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="Email" class="form-control" placeholder="Email"  required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="Phone" class="form-control" placeholder="Phone Number" required>
                                </div>
                                <div class="col-md-6 d-flex">
                                    <div class="form-control d-flex justify-content-end">
                                        <span class="gender-text">Gender</span>
                                        <div class="gender">
                                            <i class="fas fa-male"></i>
                                            <input type="radio" name="Gender" value="0" class="form-control" required/>
                                        </div>
                                        <div class="gender">
                                            <i class="fas fa-female"></i>
                                            <input type="radio" name="Gender" value="1" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @* <input type="text" name="Department" class="form-control" placeholder="Department">*@

                                    <select class="form-control" name="DepartmentId" style="color:#495057;" required>
                                        <option value="0">Department</option>
                                        @foreach (var item in Model.Departments)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <select class="form-control" name="RoleId" style="color:#495057;" required>
                                        <option value="0">Role</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="JoinDate" data-provide="datepicker" class="form-control" placeholder="Joid Date" required>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" name="Salary" type="number" placeholder="Salary" required />
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group">
                    <input type="file" class="" id="InputFile" name="Profile">
                </div>*@
                        <hr>
                        <h6>Socials</h6>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="Facebook" class="form-control" placeholder="Facebook">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="Twitter" class="form-control" placeholder="Twitter">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="Linkedin" class="form-control" placeholder="Linkedin">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="Instagram" class="form-control" placeholder="Instagram">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-add-buttons">
                        <button class="btn btn-primary add-emp-btn" type="submit">Add</button>
                        <button class="btn btn-primary edit-emp-btn" data-id="0" type="submit">Edit</button>
                        <button class="btn btn-outline-secondary close-modal">Close</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
}
